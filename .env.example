# Server Configuration
PORT=3003
HOST=0.0.0.0
NODE_ENV=development

# Security
API_KEY=your-phi4-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Parser Configuration
DEFAULT_PARSER=distilbert
ENABLE_DISTILBERT=true
ENABLE_HYBRID=true
ENABLE_FAST=true
ENABLE_ORIGINAL=true

# Model Configuration
MODEL_CACHE_DIR=./models
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
NER_MODEL=Xenova/bert-base-multilingual-cased-ner-hrl

# Phi4 LLM Configuration (via Ollama)
ENABLE_PHI4=false
PHI4_API_URL=http://127.0.0.1:11434/api/generate
OLLAMA_MODEL=phi4
PHI4_CONTEXT_LENGTH=2048
PHI4_MAX_TOKENS=500
PHI4_TEMPERATURE=0.7
PHI4_TOP_P=0.9

# Performance
REQUEST_TIMEOUT=10000
MAX_CONCURRENT_REQUESTS=10
MODEL_WARMUP_ON_START=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
